<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:layout_below="@+id/btndel"
        android:layout_toEndOf="@+id/btn6"
        android:background="@android:color/darker_gray"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:layout_below="@+id/myTextView1"
        android:layout_toEndOf="@+id/btn6"
        android:background="@android:color/darker_gray"
        android:onClick="onLongClick"
        android:text="DEL"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_alignBottom="@+id/btn2"
        android:layout_toEndOf="@+id/btn6"
        android:background="@android:color/darker_gray"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_below="@+id/btnD"
        android:layout_toEndOf="@+id/btn6"
        android:background="@android:color/darker_gray"
        android:onClick="onClickOperator"
        android:text="*"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/myTextView1"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/button7"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/myTextView1"
        android:layout_toEndOf="@+id/button7"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn6"
        android:background="@android:color/darker_gray"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnequl"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/darker_gray"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button7"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnpoint"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:onClick="onClickPoint"
        android:text="."
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/myTextView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/myTextView1"
        android:background="@android:color/darker_gray"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</RelativeLayout>